<h1 class="text-center">Review Documents</h1>


<div class="container mt-5">
  <div class="row">
    <div class="col">
        <h3 class="text-center mb-3">What do you think of the document?</h3>
        <div class="row">
            <div class="col">
                <%=link_to 'Looks good!', release_form_ready_to_send_path(@release_form), class: 'btn btn-lg btn-success w-100'%>
            </div>
            <div class="col">
                <%=link_to 'Needs changes', nil, class: 'btn btn-lg btn-danger w-100'%>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="text-center">The document is approved, and your client can sign it.</p>
            </div>
            <div class="col">
                <p class="text-center">The document is rejected, and you can request adjustments.</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <%= bootstrap_form_with model: @comment, method: :post, url: comment_create_path(@release_form), local: true do |form| %>
                    <div>
                        <%= form.text_area :content, class: "form-control", autofocus: "autofocus", placeholder: "Add reason for rejection here."%>
                        <br>
                        <%=form.submit("Post Comment")%>
                    </div>
                <% end %>
                <br>
                <%=render "comments"%>
            </div>
        </div>
    </div>
    <div class="col">
      <embed src="<%=rails_blob_path(@release_form.pdf)%>" type="application/pdf" width="100%" height="800" style="border: none;">
    </div>
</div>


