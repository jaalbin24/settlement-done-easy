<div class="row">
    <div class="col-auto p-0">
        <ul class="nav flex-column bg-light border-end">
            <li class="nav-item">
                <a class="nav-link text-center" href="">Account</a>
            </li> 
            <li class="nav-item">
                <a class="nav-link text-center" href="">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-center" href="">Wallet</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-center" href="">Billing</a>
            </li>
        </ul>
    </div>
    <div class="col p-0">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h3 class="m-0">Details</h3>
                            <%if current_user.activated?%>
                                <h6 class="card-subtitle text-success m-0">Your account has been activated.</h6>
                            <%else%>
                                <h6 class="card-subtitle text-danger m-0">Your account is not activated.</h6>
                            <%end%>
                        </div>
                        <%=form_for(current_user, url: registration_path(current_user), html: { method: :put }) do |f| %>
                            <div class="card-body">
                                <div class="form-group mb-2">
                                    <%=f.label :email, class: "form-label"%>
                                    <div class="input-group">
                                        <%=f.email_field :email, class: "form-control"%>
                                        <%if current_user.email_verified?%>
                                            <span class="input-group-text text-success">
                                                <%=checkbox_icon(checked: true)%><div class="ms-1">Verified</div>
                                            </span>
                                        <%else%>
                                            <span class="input-group-text text-danger">
                                                <%=checkbox_icon(checked: false)%><div class="ms-1">Not verified</div>
                                            </span>
                                        <%end%>
                                    </div>
                                    <small class="form-text text-muted">This is the email used to sign in to Settlement Done Easy.</small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-group">
                                        <%=f.label :password, class: "form-label"%>
                                        <%=f.text_field :password, value: "********", class: "form-control", readonly: true%>
                                        <button class="p-0 btn btn-sm btn-link">Change password</button>
                                    </div>
                                    <div class="form-group">
                                        <%=f.label :phone_number, class: "form-label"%>
                                        <%=f.telephone_field :phone_number, value: "#{number_to_phone(1234567890, area_code: true)}", class: "form-control"%>
                                        <small class="form-text text-muted">This is the number used for 2FA.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body border-top d-flex align-items-center justify-content-between">
                                <p class="text-muted m-0">No changes will be made until you click Update.</p>
                                <%=f.submit "Update", class: "btn btn-primary btn-sm"%>
                            </div>
                        <%end%>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h3 class="m-0">Security</h3>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <%if current_user.two_factor_authentication_enabled?%>
                                    <h6 class="card-subtitle text-muted">2FA is enabled.</h6>
                                    <button class="btn btn-secondary btn-sm m-0 my-auto">Disable 2FA</button>
                                <%else%>
                                    <h6 class="card-subtitle text-danger">2FA is disabled.</h6>
                                    <button class="btn btn-secondary btn-sm m-0">Enable 2FA</button>
                                <%end%>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">

                        </div>
                        <div class="card-body">
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>