<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <h3 class="card-header">Payouts</h3>
                <table class="table table-sm table-hover mb-0">
                    <thead>
                        <tr>
                            <td>Claimant</td>
                            <td>Account</td>
                            <td>Amount</td>
                            <td>Date initiated</td>
                            <td>Status</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>John Wilkes</td>
                            <td>XXXXX9543</td>
                            <td>$3021.40</td>
                            <td>July 31</td>
                            <td><span class="badge rounded-pill bg-success">Complete</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <h3 class="card-header">Linked Bank Accounts</h3>
                <ul class="list-group list-group-flush">
                    <%if current_user.bank_accounts.empty?%>
                    <div class="list-group-item">
                        <h5 class="m-0 text-center text-muted">No bank accounts have been linked to SDE.</h5>
                    </div>
                    <%else%>
                    <%current_user.bank_accounts.each do |ba|%>
                    <div class="list-group-item">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title"><%=ba.nickname%></h5>
                                <h6 class="card-subtitle text-muted">XXXXX<%=ba.last4%></h6>
                            </div>
                            <div class="col-auto text-end">
                                <h5><%=link_to "❌", bank_account_delete_path(ba), method: :delete, class: "text-decoration-none"%></h5>
                                <h6 class="card-subtitle text-muted">Status: <%=ba.status%></h6>
                            </div>
                        </div>
                    </div>
                    <%end%>
                    <%end%>
                </ul>
                <div class="card-body">
                    <%=form_with(url: bank_account_create_path, local: true) do |f|%>
                        <%# This is here to generate a CSRF token that will be used to authenticate a potential POST request %>
                    <%end%>
                    <button id="add_bank_account" type="button" class="btn btn-sm btn-primary">Add account</button> 
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
                </div>
            </div>
        </div>
    </div>
</div>