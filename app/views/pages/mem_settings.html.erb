<h1 class="mt-3 mb-4 fw-bold">Settings</h1>
<br>

<div class="row" style="min-height: 70vh;">
    <div class="col-auto pe-0">
        <div class="btn-group-vertical">
            <button class="btn btn-lg btn-secondary" name="settings-nav-bar-account-button">Account</button>
            <button class="btn btn-lg btn-secondary">Profile</button>
            <button class="btn btn-lg btn-secondary">Wallet</button>
            <button class="btn btn-lg btn-secondary">Billing</button>        
        </div>
    </div>
    <div class="col p-0">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card mb-3" name="details-section">
                        <div class="card-header">
                            <h3 class="m-0">Account Details</h3>
                        </div>
                        <%=form_for(current_user, url: registration_path(current_user), html: { method: :put, id: "edit-user-form"}) do |f| %>
                            <div class="card-body">
                                <div class="form-group mb-2">
                                    <%=f.label :email, class: "form-label"%>
                                    <div class="input-group">
                                        <%=f.email_field :email, class: "form-control"%>
                                        <%if current_user.email_verified?%>
                                            <span class="input-group-text text-success">
                                                <%=checkbox_icon(checked: true)%><div class="ms-1">Verified</div>
                                            </span>
                                        <%else%>
                                            <span class="input-group-text text-danger">
                                                <%=checkbox_icon(checked: false)%><div class="ms-1">Not verified</div>
                                            </span>
                                        <%end%>
                                    </div>
                                    <small class="form-text text-muted">This is the email used to sign in to Settlement Done Easy.</small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-group">
                                        <%=f.label :password, class: "form-label"%>
                                        <input id="password-placeholder" value="********" class="form-control" readonly="readonly" type="text">
                                        <button class="p-0 btn btn-sm btn-link" name="open-change-password-button" type="button">Change password</button>
                                    </div>
                                    <div class="form-group">
                                        <%=f.label :phone_number, class: "form-label"%>
                                        <%=f.telephone_field :phone_number, value: "#{number_to_phone(1234567890, area_code: true)}", class: "form-control"%>
                                        <small class="form-text text-muted">This is the number used for MFA.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body border-top d-flex align-items-center justify-content-between">
                                <p class="text-muted m-0">No changes will be made until you click Update.</p>
                                <button class="btn btn-primary btn-sm" name="open-password-confirmation-button">Update</button>
                            </div>
                        <%end%>
                    </div>
                </div>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="m-0">Security</h3>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <%if current_user.two_factor_authentication_enabled?%>
                                    <h6 class="card-subtitle text-muted">MFA is enabled.</h6>
                                    <button class="btn btn-secondary btn-sm m-0 my-auto">Disable MFA</button>
                                <%else%>
                                    <h6 class="card-subtitle text-danger">MFA is disabled.</h6>
                                    <button class="btn btn-secondary btn-sm m-0">Enable MFA</button>
                                <%end%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<%=render "modals/password_confirmation"%>
<%=render "modals/change_password"%>