<h1 class="text-center">Documents Index</h1>

<%if @settlement.documents.size == 0%>
    <p class="text-center">This settlement has no documents! Click <%=link_to "here", document_new_path(@settlement)%> to add one.</p>
<%else%>
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <td>Filename</td>
            <td>Added by</td>
            <td>Date added</td>
            <td>Approval</td>
            <td>Signature</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <%@settlement.documents.order(status: :asc).each do |d|%>
        <%if d.rejected?%>
            <tr class="table-danger">
        <%elsif d.approved?%>
            <tr class="table-success">
        <%else%>
            <tr>
        <%end%>
                <td><%=d.pdf.filename%></td>
                <%if d.auto_generated?%>
                    <td><%="#{d.added_by.full_name} (Auto-generated)"%></td>
                <%else%>
                    <td><%=d.added_by.full_name%></td>
                <%end%>
                <td><%=d.created_at.in_time_zone("Central Time (US & Canada)").strftime("%B %-d, %Y")%></td>
                <%if d.approved?%>
                    <td>‚úîÔ∏è</td>
                <%elsif d.rejected?%>
                    <td>‚ùå</td>
                <%else%>
                    <td>‚åõ</td>
                <%end%>
                <%if d.signed?%>
                    <td>‚úîÔ∏è</td>
                <%elsif !d.ds_envelope_id.blank?%>
                    <td>‚åõ</td>
                <%else%>
                    <td>‚ùå</td>
                <%end%>
                <td class="text-end">
                    <%=link_to "Review", document_show_path(d), class: "badge rounded-pill bg-primary text-decoration-none"%>
                    <%=link_to "Download", rails_blob_path(d.pdf, disposition: "attachment"), class: "badge rounded-pill bg-primary text-decoration-none"%>
                    <%=link_to "Remove", document_delete_path(d), data: {confirm: "Are you sure you want to delete #{d.pdf.filename}?"}, method: :delete, class: "badge rounded-pill bg-danger text-decoration-none"%>
                </td>
            </tr>
        <%end%>
    </tbody>
</table>
<%end%>

<div class="row">
    <div class="text-end col">
        <%=link_to "ü°∏ Back to settlement", settlement_show_path(@settlement), class: "btn btn-outline-primary"%>
    </div>
    <div class="col-auto">
        <%=link_to "‚ûï Add document", document_new_path(@settlement), class: "btn btn-primary"%>
    </div>
    <div class="text-start col">
        <%=link_to "‚ú® Generate document", settlement_generate_document_path(@settlement), class: "btn btn-primary"%>
    </div>
</div>