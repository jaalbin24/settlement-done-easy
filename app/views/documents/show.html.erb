<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <h1 class="text-center card-header">Document Info</h1>
                <div class="card-body bg-dark">
                    <div class="container">
                        <div class="row">
                            <div class="col text-end">
                                Filename:
                            </div>
                            <div class="col">
                                <%=@document.pdf.filename%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-end">
                                Added by:
                            </div>
                            <div class="col">
                                <%=@document.added_by.full_name%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-end">
                                Date added:
                            </div>
                            <div class="col">
                                <%=@document.created_at.in_time_zone("Central Time (US & Canada)").strftime("%B %-d, %Y")%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-end">
                                Signature:
                            </div>
                            <div class="col">
                                <%if @document.signed?%>
                                    ✔️
                                <%else%>
                                    ❌
                                <%end%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-end">
                                Approval:
                            </div>
                            <div class="col">
                                <%if @document.approved?%>
                                    ✔️
                                <%elsif @document.rejected?%>
                                    ❌
                                <%else%>
                                    ⌛
                                <%end%>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col">
                        <%if !@document.approved?%>
                            <%=link_to "Approve", document_approve_path(@document), method: :post, class: "btn btn-lg btn-success w-100"%>
                        <%else%>
                            <%=link_to "Approve", nil, class: "btn btn-lg btn-success w-100 disabled"%>
                        <%end%>
                        </div>
                        <div class="col">
                        <%if !@document.rejected?%>
                            <%=link_to "Reject", document_reject_path(@document), method: :post, class: "btn btn-lg btn-danger w-100"%>
                        <%else%>
                            <%=link_to "Reject", nil, class: "btn btn-lg btn-danger w-100 disabled"%>
                        <%end%>
                        </div>
                    </div>
                    <div class="row text-center mt-2">
                        <div class="col">
                            Once approved, the document cannot be modified.
                        </div>
                        <div class="col">
                            Once rejected, a new document must be uploaded.
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3 text-center">
                <%=link_to "Back to document index", document_index_path(@document.settlement), class: "btn btn-lg btn-primary"%>
            </div>
        </div>
        <div class="col">
            <embed src="<%=rails_blob_path(@document.pdf)%>" type="application/pdf"  width="100%" height="700" style="border: none;">
        </div>
    </div>
</div>
