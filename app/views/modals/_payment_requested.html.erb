<div class="modal fade" name="payment-requested-modal" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Payment Request!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <h6><%=@settlement.active_payment_request.requester.full_name%> has requested payment!</h6>
                <p>Amount: $<%=@settlement.active_payment_request.payment.amount%></p>
                <p>Clicking accept will trigger a payment comfirmation modal.</p>
            </div>
            <div class="modal-footer">
                <%=link_to "Deny", payment_request_deny_path(@settlement.active_payment_request), method: :post, class: "btn btn-secondary"%>
                <%=link_to "Send payment", payment_request_accept_path(@settlement.active_payment_request), method: :post, class: "btn btn-primary"%>
            </div>
        </div>
    </div>
</div>

<%if render_instantly%>
    <script>
        new bootstrap.Modal(document.getElementsByName('payment-request-modal')[0]).show();
    </script>
<%end%>