<div class="row w-100 m-0">
    <div class="col">
        <div class="h-100 d-grid justify-content-center align-items-center">
            <div>
                <div class="bg-secondary rounded-circle px-5 py-4">
                    <%=image_tag "sde_cube_logo_blue_large.png", height: "400rem"%>
                </div>
                <h2 class="text-center text-primary mt-3"><strong>Settlement Done Easy</strong></h2>
            </div>
        </div>
    </div>
    <div class="col bg-light">
        <div class="h-100 d-grid justify-content-center align-items-center">
            <div style="min-width: 32rem;">
                <div class="mb-4 ms-1">
                    <h1 class="">Add Payment Method</h1>
                </div>
                <div>
                    <%=render "payment_methods/type_select"%>
                    <%=form_for @card, url: card_create_path do |f|%>
                        <%=f.hidden_field :exp_month%>
                        <%=f.hidden_field :exp_year%>
                        <div class="d-grid gap-2 my-5">
                            <div class="form-group">
                                <%=f.label :card_number, class: "fw-bold"%>
                                <div class="input-group">
                                    <%=f.text_field :number, class: "form-control animated-width", placeholder: "1234 1234 1234 1234", required: true%>
                                    <span class="input-group-text d-flex animated-width">
                                        <div class="d-flex justify-content-center overflow-hidden animated-width" name="card_icon_container" data-default="true" for="visa">
                                            <%=credit_card_icon({issuer: :visa})%>
                                        </div>
                                        <div class="d-flex justify-content-center overflow-hidden animated-width" name="card_icon_container" data-default="true" for="mastercard">
                                            <%=credit_card_icon({issuer: :mastercard})%>
                                        </div>
                                        <div class="d-flex justify-content-center overflow-hidden animated-width" name="card_icon_container" data-default="true" for="amex">
                                            <%=credit_card_icon({issuer: :amex})%>
                                        </div>
                                        <div class="d-flex justify-content-center overflow-hidden animated-width" name="card_icon_container" data-default="true" for="discover">
                                            <%=credit_card_icon({issuer: :discover})%>
                                        </div>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col form-group">
                                    <%=f.label :expiration, class: "fw-bold"%>
                                    <%=f.text_field :expiration, class: "form-control", placeholder: "MM/YY", required: true%>
                                </div>
                                <div class="col form-group">
                                    <label class="fw-bold">CVC</label>
                                    <%=f.text_field :cvc, class: "form-control", placeholder: "CVC", required: true%>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 d-flex gap-2">
                            <%=f.submit "Save", class: "btn btn-primary"%>
                            <%=link_to 'Cancel', @continue_path, class: "btn btn-outline-primary", id: "continue_path_button" if @continue_path%>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .animated-width {
        transition: width 0.5s ease-out;
    }
</style>

