<div class="row w-100 m-0">
    <div class="col">
        <div class="h-100 d-grid justify-content-center align-items-center">
            <div>
                <div class="bg-secondary rounded-circle px-5 py-4">
                    <%=image_tag "sde_cube_logo_blue_large.png", height: "400rem"%>
                </div>
                <h2 class="text-center text-primary mt-3"><strong>Settlement Done Easy</strong></h2>
            </div>
        </div>
    </div>
    <div class="col bg-light">
        <div class="h-100 d-grid justify-content-center align-items-center">
            <div style="min-width: 28rem;">
                <div class="mb-4 ms-1">
                    <h1 class="">Add Payment Method</h1>
                </div>
                <div>
                    <%=render "payment_methods/type_select"%>
                    <div id="stripe_payment_element" data-secret="<%=@secret%>" data-stripe-acct="<%=@stripe_account%>" data-return-url="<%=path_to_url(@continue_path)%>">
                        <%=form_with url: card_create_path do |f|%>
                            <%=f.hidden_field :stripe_token, id: "stripe_token"%>
                            <%=f.hidden_field :stripe_card, id: "stripe_token"%>

                            <div class="d-grid gap-2 my-5">
                                <div class="form-group">
                                    <label class="fw-bold">Card number</label>
                                    <div id="card_number_form_group" class="form-group">
                                        <div id="card_number_mount_point"></div>
                                        <div id="card_number_feedback" class="invalid-feedback text-nowrap"></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div id="card_expiry_form_group" class="form-group">
                                            <label class="fw-bold">Expiration</label>
                                            <div id="card_expiry_mount_point"></div>
                                            <div id="card_expiry_feedback" class="invalid-feedback text-nowrap"></div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div id="card_cvc_form_group" class="form-group has-danger">
                                            <label class="fw-bold">CVC</label>
                                            <div id="card_cvc_mount_point"></div>
                                            <div id="card_cvc_feedback" class="invalid-feedback text-nowrap"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col form-group">
                                        <%=f.label :country, class: "fw-bold"%>
                                        <select class="form-select" name="country">
                                            <option value="United States">United States</option>
                                        </select>
                                    </div>
                                    <div class="col form-group">
                                        <%=f.label :zip_code, class: "fw-bold"%>
                                        <%=f.text_field :zip_code, class: "form-control", placeholder: "12345", required: true%>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3 d-flex gap-2">
                                <%=f.submit "Save", class: "btn btn-primary", id: "submit_card_button"%>
                                <%=link_to 'Cancel', @continue_path, class: "btn btn-outline-primary", id: "continue_path_button" if @continue_path%>
                            </div>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>