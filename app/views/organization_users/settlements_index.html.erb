<h1 class="text-center">Settlement Index</h1>
<p class="text-center">This is a list of all active settlements associated with <%=@organization.full_name%></p>

<table class="table table-sm table-hover table-borderless">
    <thead class="border-bottom border-secondary">
        <tr>
            <th>Status</th>
            <th>Attorney</th>
            <th>Agent</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        <%@organization.settlements.each do |s|%>
            <tr class="table-secondary">
                <td><%=render "status", settlement: s%></td>
                <td><%=link_to s.attorney.full_name, settlement_show_path(s)%></td>
                <td><%=link_to s.insurance_agent.full_name, settlement_show_path(s)%></td>
                <td>$<%=s.settlement_amount%></td>
            </tr>
        <%end%>
    </tbody>
</table>