<%= bootstrap_form_with model: @release_form, url: path, local: true do |form| %>
  <div>
    <%= form.text_field :claim_number%>
    <%= form.text_field :policy_number%>
    <%= form.text_field :plaintiff_name%>
    <%= form.text_field :defendant_name%>
    <%= form.date_field :date_of_incident%>
    <%= form.text_field :place_of_incident%>
    <%= form.text_field :incident_description%>
    <%= form.text_field :settlement_amount, step: :any%>
    <br>
    <%= form.submit("Generate")%>
  </div>
<% end %>