<div class="row w-100 m-0">
    <div class="col">
        <div class="h-100 d-grid justify-content-center align-items-center">
            <div>
                <div class="bg-secondary rounded-circle px-5 py-4">
                    <%=image_tag "sde_cube_logo_blue_large.png", height: "400rem"%>
                </div>
                <h2 class="text-center text-primary mt-3"><strong>Settlement Done Easy</strong></h2>
            </div>
        </div>
    </div>
    <div class="col bg-light">
        <div class="h-100 d-flex align-items-center">
            <div class="w-100">
                <%# This unless block is here because free-use accounts should not be advertised when they do not exist.%>
                <%unless User.where(email: "attorney0@example.com").count == 0%>
                    <div class="alert alert-dismissible alert-primary w-75 mx-auto">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <h4 class="alert-heading m-0 fw-bold">You can use these login credentials.</h4>
                        <hr class="my-1">
                        <p class="m-0">Settlement Done Easy is currently unfinished. Until it is complete, the following emails will be available for anyone wanting to explore the site.</p>
                        <ul class="my-2">
                            <li>
                                <span class="fw-bold">attorney0@example.com</span> will log you in as an attorney.
                            </li>
                            <li>
                                <span class="fw-bold">adjuster0@example.com</span> will log you in as an adjuster.
                            </li>
                            <li>
                                <span class="fw-bold">law_firm0@example.com</span> will log you in as a law firm.
                            </li>
                            <li>
                                <span class="fw-bold">insurance_company0@example.com</span> will log you in as an insurance company.
                            </li>
                        </ul>
                        <p class="m-0">All passwords are '<span class="fw-bold">password123</span>'</p>
                    </div>
                <%end%>
                <div class="w-50 mx-auto">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {method: :post, "data-js-styling": true, "data-wait-before-resubmit": true}) do |f|%>
                        <div class="mb-4 ms-1">
                            <h1 class="">Welcome back!</h1>
                            <p class="">Welcome back! Please sign in below.</p>
                        </div>
                        <div class="container ps-3 mt-2">
                            <div class="row my-1">
                                <div class="col form-group px-0">
                                    <%=f.label :email, class: "form-label"%>
                                    <%=f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, required: true%>
                                </div>
                            </div>
                            <div class="row my-2">
                                <div class="col form-group px-0">
                                    <%=f.label :password, class: "form-label"%>
                                    <%=f.password_field :password, class: "form-control", placeholder: "Password", required: true, autofill: "current-password"%>
                                </div>
                            </div>
                        </div>
                        <%if devise_mapping.rememberable?%>
                            <div class="row my-3">
                                <div class="col form-group">
                                    <%=f.hidden_field :remember_me, value: "0", autocomplete: "off"%>
                                    <%=f.check_box :remember_me, value: "1"%>
                                    <%=f.label :remember_me%>
                                </div>
                            </div>
                        <%end%>
                        <%=f.submit "Sign in", class: "btn btn-primary mt-2 ms-1", "data-test-id": "submit_user_sign_in_button"%>
                    <%end%>
                    <p class="text-muted mt-4">Don't have an account? <%=link_to "Sign up", new_user_registration_path, class: "link-dark"%>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

