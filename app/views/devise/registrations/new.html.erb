<div class="row w-100 m-0">
    <div class="col bg-bluegrey">
        <div class="h-100 d-grid justify-content-center align-items-center">
            <div>
                <div class="bg-secondary rounded-circle px-5 py-4">
                    <%=image_tag "sde_cube_logo_blue_large.png", height: "400rem"%>
                </div>
                <h2 class="text-center text-primary mt-3"><strong>Settlement Done Easy</strong></h2>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="h-100 d-flex justify-content-center">
            <div class="" style="width: 60%; margin-top: 20%;">
                <%=form_for(@user, url: user_registration_path, html: {"data-js-styling": true, "data-wait-before-resubmit": true}) do |f|%>
                    <div class="mb-4 ms-1">
                        <h1 class="">Create an account</h1>
                        <p class="">You are creating <%=indefinite_articleize(word: @role.titleize, html_tag: :strong)%> account. If you want to create a different type of account, click <%=link_to "here", user_type_select_path, class: "link-dark"%>.</p>
                    </div>
                    <div class="container ps-3 mt-2">
                        <div class="row">
                            <%=f.fields_for @profile, as: :profile, include_id: false do |pf|%>
                                <div class="col form-group px-0">
                                    <%=pf.label "Name of company", class: "form-label mb-0 mt-2"%>
                                    <input class="form-control" placeholder="Name of company" autofocus="autofocus" required="required" type="text" name="user[profile_attributes][public_name]" id="user_profile_attributes_public_name">
                                </div>
                            <%end%>
                        </div>
                        <div class="row">
                            <div class="col form-group px-0">
                                <label for="user_email" class="form-label mb-0 mt-2">Email address</label>
                                <input class="form-control" autocomplete="email" type="email" name="user[email]" id="user_email" placeholder="Email" required data-verify-unique="true">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col form-group" style="padding-left: 0rem; padding-right: 0.5rem;">
                                <label for="user_password" class="form-label mb-0 mt-2">Password</label>
                                <input type="password" class="form-control" id="user_password" placeholder="Password" name="user[password]" required>
                            </div>
                            <div class="col form-group" style="padding-left: 0.5rem; padding-right: 0rem;">
                                <label for="user_password_confirmation" class="form-label mb-0 mt-2">Confirm password</label>
                                <input type="password" class="form-control" id="user_password_confirmation" placeholder="Confirm password" name="user[password_confirmation]" required>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="user_role" name="user[role]" value="<%=@role%>">
                    <%=f.submit "Sign up", class: "btn btn-primary mt-4 ms-1", "data-test-id": 'submit_user_sign_up_button'%>
                <%end%>
                <p class="text-muted mt-4">Already have an account? <%=link_to "Sign in", new_user_session_path, class: "link-dark"%>.</p>
            </div>
        </div>
    </div>
</div>
